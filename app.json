{
  "expo": {
    "name": "bolt-expo-nativewind",
    "slug": "bolt-expo-nativewind",
    "version": "1.0.0",
    "orientation": "portrait",

    // Your app icon (used everywhere by default)
    "icon": "./assets/images/icon.png",

    // Use the expo-splash-screen plugin instead of the top-level splash key
    // (itâ€™ll generate the right native code for both iOS & Android)
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {}
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],

    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "assetBundlePatterns": [
      "assets/images/*"
    ],

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.boltexponativewind"
    },

    "android": {
      // package name and any extra Gradle props
      "package": "com.anonymous.boltexponativewind"
    },

    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    }
  }
}
